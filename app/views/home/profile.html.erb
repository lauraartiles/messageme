<h1><%= @user.username %></h1>

<%= form_for(@message) do |f| %>
   
   <div class="field">
     <%= f.hidden_field :user_id, :value=>@user.id %>
  </div>

  <div class="field">
    <%= f.label :message %>
    <%= f.text_field :message %>
  </div>

  <div class="actions" %>
    <%= f.submit "Send message", :class=> "btn btn-success" %>
  </div>  
<%end%>
